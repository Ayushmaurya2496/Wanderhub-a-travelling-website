<header>
    <style>
        .user-container {
            background-color: rgb(86, 86, 102);
            padding: 5px;
            border-radius: 10px;
            text-align: center;
        }
        .user-container p {
            font-size: 12px;
            font-weight: bold;
            color: rgb(236, 237, 238);
            height: auto;
        }
    </style>
    <div class="header-container">
        <div class="logo">
            <a href="/">Wanderlust</a>
        </div>
        <nav class="nav-links">
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
            <ul><link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

                <li><a href="/">Home</a></li>
                <li><a href="/listings">Listings</a></li>
                <li><a href="/about">About Us</a></li>
                <li><a href="/contact">Contact Us</a></li>
            </ul>
        </nav>

         <div class="search-bar">
         <form action="/search" method="GET">
          <input type="text" name="q" placeholder="Search destinations...">
          <button type="submit"><i class="fas fa-search"></i></button>
         </form>
        </div>
        
        <div class="cta">
            <a href="/listings/new" class="btn">Add Listing</a>
        </div>
        <div class="auth-buttons d-flex ms-3 gap-2">
            <% if (currentUser) { %>
                <a href="/logout" class="btn btn-outline-danger" >Logout</a>
                <link rel="stylesheet" href="/styles.css">
                <div class="user-container">
                    <p style="height: 15px;"> <%= currentUser.username %></p>
                </div>
            <% } else { %>
                <a href="/signup" class="btn" style="background-color: #00ADB5; color: white;">Signup</a>
                <a href="/login" class="btn btn-outline-danger" >Login</a>

            <% } %>
            
        </div>
    </div>
</header>