<% layout('layouts/boilerplate') %>
<style>
.hero-section {
    width: 100%;
    height: 60vh;
    background: url('https://source.unsplash.com/1600x900/?travel,nature') no-repeat center center/cover;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: white;
    font-family: Arial, sans-serif;
}
@keyframes fadeIn {
    0% { opacity: 0; 
        transform: translateY(-20px); }
    100% { opacity: 1;
         transform: translateY(0); }
}
.hero-section .content {
    background: rgba(0, 0, 0, 0.5);
    padding: 30px;
    border-radius: 10px;
    animation: fadeIn 1.75s ease-in-out;
}
@media (max-width: 768px){
.hero-section h1 {
    font-size: 30px;
    font-weight: bold;
    margin-bottom: 10px;
}
.hero-section p {
    font-size: 16px;
    margin-bottom: 20px;
}}
.hero-section .btn {
    background: #007bff;
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 5px;
    cursor: pointer;
    font-size: 18px;
    transition: 0.3s ease;
}
.hero-section .btn:hover {
    background: #0056b3;
}
</style>
<body>
    

<div class="hero-section">
    <div class="content">
        <h1>Welcome to Wanderlust</h1>
        <p>Discover breathtaking destinations, hidden gems, and unforgettable experiences.</p>
        <button class="btn" onclick="window.location.href='/listings'">Start Exploring</button>
    </div>

</div>
 <h2 class="text-center my-5">üî• Top Rated Listings</h2>

    <div class="container-fluid p-0">
        <div class="row">
            <% if (topListings && topListings.length > 0) { %>
                <% topListings.forEach(function(listing) { %>
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card listing-card" style="width: 100%;">
                            <a href="/listings/<%= listing._id %>">
                                <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image">
                            </a>
                            <div class="card-body">
                                <p class="card-text">
                                    <b><%= listing.title %></b><br>
                                    ‚Çπ<%= listing.price %>/night<br>
                                     <%= listing.rating  %>  <%= listing.totalReviews %>‚≠ê Reviews
                                </p>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <p class="text-center">No listings available right now.</p>
            <% } %>
        </div>
    </div>



</body>