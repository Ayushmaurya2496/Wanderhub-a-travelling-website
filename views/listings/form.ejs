<% layout('layouts/boilerplate') %>
<br><br>
<div class="container add-listing-form">
    <br>
    <form method="POST" action="/listings" novalidate class="needs-validation"  enctype="multipart/form-data">
        <div class="form-group mb-3">
            <label for="title">Title</label>
            <input type="text" id="title" name="title" placeholder="Enter title" minlength="3" maxlength="50" class="form-control" required>
            <div class="invalid-feedback">Title must be between 3 to 50 characters.</div>
        </div>

        <div class="form-group mb-3">
            <label for="description">Description</label>
            <textarea id="description" name="description" placeholder="Enter description" minlength="10" maxlength="300" class="form-control" required></textarea>
            <div class="invalid-feedback">Description must be between 10 to 300 characters.</div>
        </div>

       


        <div class="form-group mb-3">
          <label for="image">Upload Image </label>
          <input type="file" id="image" name="listing[image]" class="form-control" required>
          <div class="invalid-feedback">Please select  a valid.</div>
      </div> 

        <div class="form-group mb-3">
            <label for="price">Price</label>
            <input type="number" id="price" name="price" placeholder="Enter price" min="1" max="1000000" class="form-control" required>
            <div class="invalid-feedback">Price must be greater than 0.</div>
        </div>

        <div class="form-group mb-3">
            <label for="country">Country</label>
            <input type="text" id="country" name="country" placeholder="Enter country" minlength="2" class="form-control" required>
            <div class="invalid-feedback">Please enter a valid country name.</div>
        </div>

        <div class="form-group mb-3">
            <label for="location">Location</label>
            <input type="text" id="location" name="location" placeholder="Enter location" minlength="2" class="form-control" required>
            <div class="invalid-feedback">Please enter a valid location.</div>
        </div>

        <button type="submit" class="btn btn-primary">Add Listing</button>
    </form>
</div>

<script>
(() => {
  'use strict';
  const forms = document.querySelectorAll('.needs-validation');
  Array.from(forms).forEach(form => {
    form.addEventListener('submit', event => {
      if (!form.checkValidity()) {
        event.preventDefault();
        event.stopPropagation();
      }
      form.classList.add('was-validated');
    }, false);
  });
})();
</script>
